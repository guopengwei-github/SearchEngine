<UserControl x:Class="SearchApp.Controls.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SearchApp.Controls"
             mc:Ignorable="d" >
    <Grid >
        <TextBox x:Name="InnerTextBox"
                 Height="30" Width="670" Margin="50,0,0,0" FontSize="16" />
        <Button x:Name="SearchButton"
                Content="搜索"
                Width="50"
                Height="30"
                Margin="0,0,0,0" HorizontalAlignment="Left" Click="SearchButton_Click" />
    </Grid>
</UserControl>
